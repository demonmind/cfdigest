<div class="postswrapper">
	<% if @res %>
		<% @res.each do |r| %>
		<div id="post">	
			<div id="header"><%= r.username %>, Posted at: <%= r.posted_at %><span style="float:right;">Source: <%= r.thread_id %></span></div>
			<div id="post-body" style="font-weight: 700;color: rgb(26, 26, 75);"><%= r.text %></div>
			<div id="footer" style="height:15px; width:100%;">Tags:<% r.tags.each do |t| %> <%=link_to t.name, "#", :class=> "tag" %> <% end %><img src="http://jeffcodemocrats.com/wp-content/uploads/2012/10/endorse-checkmark-240x237.jpg" style="width:20px;height:20px;float:right;"/></div>
		</div>
		<% end %>
	<% end %>
</div>

<style>
#post{
	background: rgb(233, 226, 226);
	padding: 6px;
	margin: 10px;
	opacity: 0.8;
	border-radius: 10px;
}
</style>